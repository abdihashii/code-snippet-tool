{
  "name": "snippet-share",
  "version": "1.0.0",
  "packageManager": "pnpm@10.11.0",
  "description": "Snippet Share Monorepo",
  "author": "Abdirahman Haji",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "dev:web": "pnpm --filter @snippet-share/web dev",
    "dev:api": "pnpm --filter @snippet-share/api dev",
    "db:start": "pnpm --filter @snippet-share/db start",
    "db:stop": "pnpm --filter @snippet-share/db stop",
    "db:reset": "pnpm --filter @snippet-share/db reset",
    "build:types": "pnpm --filter @snippet-share/types build",
    "build:schemas": "pnpm --filter @snippet-share/schemas build",
    "build:web": "pnpm run build:types && pnpm run build:schemas && pnpm --filter @snippet-share/web build",
    "deploy:web": "pnpm run --filter @snippet-share/web deploy",
    "deploy:api": "pnpm run --filter @snippet-share/api deploy",
    "clean": "rm -rf node_modules dist",
    "clean:all": "pnpm clean && pnpm -r clean",
    "clean:install": "pnpm clean:all && pnpm i",
    "lint": "pnpm run -r --parallel lint"
  },
  "dependencies": {
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.49.0",
    "@types/node": "^22.15.17",
    "date-fns": "^4.1.0",
    "eslint": "^9.26.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "typescript": "^5.8.3"
  }
}
