{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Output settings
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Module settings for ES modules
    "module": "ES2022",
    "moduleResolution": "bundler",
    
    // Generate declaration files for TypeScript consumers
    "declaration": true,
    "declarationMap": true,
    
    // Source maps for debugging
    "sourceMap": true,
    
    // Emit settings
    "emitDeclarationOnly": false,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}