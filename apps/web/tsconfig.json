{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./app/*"],
      "@/.content-collections/generated": ["./.content-collections/generated"]
    },
    "strictNullChecks": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true
  },
  "exclude": ["app/__tests__/coverage/**/*", "eslint.config.mjs", "dist"]
}
